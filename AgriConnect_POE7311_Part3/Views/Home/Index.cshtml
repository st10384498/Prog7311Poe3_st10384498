@{
    ViewData["Title"] = "Home Page";
}

<!-- Custom Styling -->
<style>
    body {
        background-color: #004d00; /* Dark green */
        color: white;
    }

    .carousel img {
        margin: 0 auto; /* Center images */
    }

    .card {
        background-color: #f8f9fa;
    }

    .login-register-links {
        text-align: center;
        margin-bottom: 2rem;
    }

    .btn {
        margin-top: 10px;
    }
</style>

<!-- Carousel Section -->
<div id="carouselExampleDark" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="3" aria-label="Slide 4"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="4" aria-label="Slide 5"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="3000">
            <img src="images/AgriCarouselPicture3.jpg" class="d-block w-80" height="330" alt="Slide 1">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2 text-white">
                <h5>Welcome to AgriConnect</h5>
                <p>Your bridge to smart, sustainable farming solutions.</p>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="3000">
            <img src="images/AgriCarouselPicture.jpg" class="d-block w-80" height="330" alt="Slide 2">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2 text-white">
                <h5>Empowering Farmers</h5>
                <p>Bringing green energy and agriculture together.</p>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="3000">
            <img src="images/AgriCarouselPicture2.jpg" class="d-block w-80" height="330" alt="Slide 3">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2 text-white">
                <h5>Grow With Us</h5>
                <p>Join a community of innovators and experts in agri-tech.</p>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="3000">
            <img src="images/AgriCarouselPicture5.jpg" class="d-block w-80" height="330" alt="Slide 4">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2 text-white">
                <h5>Grow With Us</h5>
                <p>Join a community of innovators and experts in agri-tech.</p>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="3000">
            <img src="images/AgriCarouselPicture4.jpg" class="d-block w-80" height="330" alt="Slide 5">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2 text-white">
                <h5>Grow With Us</h5>
                <p>Join a community of innovators and experts in agri-tech.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Farmer and Employee Login/Register Cards -->
<div class="container mb-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-5 mb-4">
            <div class="card h-100 shadow border-success">
                <div class="card-body">
                    <h5 class="card-title text-success">Farmer Portal</h5>
                    <p class="card-text text-dark">Access tools, insights, and connect with green energy solutions tailored for farmers.</p>
                    <a asp-controller="Farmer" asp-action="Login" class="btn btn-outline-success me-2">Login as Farmer</a>
                    <a asp-controller="Farmer" asp-action="Create" class="btn btn-success">Register as Farmer</a>
                </div>
            </div>
        </div>

        <div class="col-md-5 mb-4">
            <div class="card h-100 shadow border-primary">
                <div class="card-body">
                    <h5 class="card-title text-primary">Employee Portal</h5>
                    <p class="card-text text-dark">Manage system content, support users, and oversee sustainable initiatives.</p>
                    <a asp-controller="Employee" asp-action="Login" class="btn btn-outline-primary me-2">Login as Employee</a>
                    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Register as Employee</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Info Cards Section -->
<div class="container mb-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">What is AgriConnect?</h5>
                    <p class="card-text text-dark">
                        AgriConnect is a digital platform designed to connect farmers with green energy, sustainable farming methods, and expert guidance.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Our Mission</h5>
                    <p class="card-text text-dark">
                        We aim to bridge the gap between agriculture and renewable energy technologies to promote sustainability and innovation.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Join Our Community</h5>
                    <p class="card-text text-dark">
                        Whether you're a farmer, supplier, or green tech expert, AgriConnect provides the tools and support you need to grow.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
