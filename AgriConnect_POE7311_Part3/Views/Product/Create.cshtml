@model AgriConnect_POE7311_Part3.Models.Product

@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        background-color: #004d00;
        color: #ffffff;
        font-family: Arial, sans-serif;
    }

    .form-container {
        background-color: #ffffff;
        color: #000000;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 0px 10px 2px #00000050;
        max-width: 600px;
        margin: 50px auto;
    }

        .form-container h1, .form-container h4 {
            text-align: center;
            color: #006600;
        }

    .form-group label {
        font-weight: bold;
        color: #004d00;
    }

    .form-control::placeholder {
        color: #999;
    }

    .form-text {
        font-size: 0.875em;
        color: #555;
    }

    .btn-primary {
        background-color: #ffcc00;
        border-color: #e6b800;
        color: #000;
        font-weight: bold;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #e6b800;
        }

    a {
        color: #ffcc00;
    }
</style>

<div class="form-container">
    <h1>Create</h1>
    <h4>Product</h4>
    <hr />

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="ProductName" class="control-label"></label>
            <input asp-for="ProductName" class="form-control" placeholder="e.g. Organic Tomatoes" required />
            <small class="form-text">Enter a short, clear name for the product.</small>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId" class="control-label"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId" required>
                <option value="">-- Select a category --</option>
            </select>
            <small class="form-text">Choose the category this product belongs to.</small>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProductionDate" class="control-label"></label>
            <input asp-for="ProductionDate" class="form-control" type="date" required />
            <small class="form-text">Select the date the product was produced.</small>
            <span asp-validation-for="ProductionDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

    <div class="text-center mt-3">
        <a asp-action="Index">← Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
