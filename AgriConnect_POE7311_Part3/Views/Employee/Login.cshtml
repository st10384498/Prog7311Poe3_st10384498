@{
    ViewData["Title"] = "Employee Login";
}

<style>
    body {
        background-color: #004d00;
        color: #ffffff;
        font-family: Arial, sans-serif;
    }

    .form-container {
        background-color: #ffffff;
        color: #000000;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 0px 10px 2px #00000050;
        max-width: 500px;
        margin: 50px auto;
    }

        .form-container h2 {
            text-align: center;
            color: #006600;
            margin-bottom: 25px;
        }

    .form-group label {
        font-weight: bold;
        color: #004d00;
    }

    .form-control::placeholder {
        color: #999;
    }

    .form-text {
        font-size: 0.875em;
        color: #555;
    }

    .btn-primary {
        background-color: #ffcc00;
        border-color: #e6b800;
        color: #000;
        font-weight: bold;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #e6b800;
        }

    .text-center a {
        color: #ffcc00;
        display: block;
        margin-top: 15px;
    }
</style>

<div class="form-container">
    <h2>Employee Login</h2>

    <form asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label for="username">Username</label>
            <input type="text" name="username" class="form-control" placeholder="Enter your username" required />
            <small class="form-text">This is the username you created during registration.</small>
        </div>

        <div class="form-group mb-4">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Enter your password" required />
            <small class="form-text">Make sure your password is correct and secure.</small>
        </div>

        <button type="submit" class="btn btn-primary">Log In</button>
    </form>

    <div class="text-center">
        <a asp-action="Register">Don't have an account? Register here</a>
    </div>
</div>
