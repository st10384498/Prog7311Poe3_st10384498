@model AgriConnect_POE7311_Part3.Models.Farmer

@{
    ViewData["Title"] = "Farmer Dashboard";
}
<style>
    body {
        background-color: #004d00;
        color: #ffffff;
        font-family: Arial, sans-serif;
    }

    .form-container {
        background-color: #ffffff;
        color: #000000;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 0px 10px 2px #00000050;
        max-width: 600px;
        margin: 50px auto;
    }

        .form-container h1, .form-container h4 {
            text-align: center;
            color: #006600;
        }

    .form-group label {
        font-weight: bold;
        color: #004d00;
    }

    .form-control::placeholder {
        color: #999;
    }

    .btn-primary {
        background-color: #ffcc00;
        border-color: #e6b800;
        color: #000;
        font-weight: bold;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #e6b800;
        }

    a {
        color: #ffcc00;
    }
</style>

<h2>Welcome, @Model.FullName!</h2>

@if (TempData["WelcomeMessage"] != null)
{
    <div class="alert alert-success">@TempData["WelcomeMessage"]</div>
}

<p><strong>Email:</strong> @Model.Email</p>
<p><strong>Username:</strong> @Model.Username</p>
<p><strong>Contact:</strong> @Model.ContactNumber</p>
<p><strong>Address:</strong> @Model.Address</p>
<p><strong>Registered on:</strong> @Model.CreatedAt.ToString("dd MMM yyyy")</p>

<!--  dashboard widgets or links -->
<a asp-controller="Product" asp-action="Create" class="btn btn-outline-success me-2">Add New Products</a>
<a asp-controller="Product" asp-action="Index" class="btn btn-success">Take stock</a>